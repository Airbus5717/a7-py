// Method-style behavior using functions and ref parameters

io :: import "std/io"

Counter :: struct {
    value: i32
}

increment :: fn(counter: ref Counter) {
    counter.val.value += 1
}

main :: fn() {
    io.println("=== Methods ===")

    c := Counter{value: 0}
    c.value = 0
    increment(c.adr)
    increment(c.adr)

    io.println("counter = {}", c.value)
}
