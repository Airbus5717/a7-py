// Match statements (switch-case) in A7

io :: import "std/io"

main :: fn() {
    io.println("=== Match Statements ===")

    day := 3
    match day {
        case 1: {
            io.println("Monday")
        }
        case 2: {
            io.println("Tuesday")
        }
        case 3: {
            io.println("Wednesday")
        }
        else: {
            io.println("Other day")
        }
    }
}
