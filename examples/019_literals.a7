// Literal values in A7

io :: import "std/io"

main :: fn() {
    io.println("=== Literals ===")

    i := 123
    f := 3.14159
    c: char = 'A'
    s: string = "hello"
    t := true
    n := nil

    io.println("int = {}", i)
    io.println("float = {}", f)
    io.println("char = {}", c)
    io.println("string = {}", s)
    io.println("bool = {}", t)
    io.println("nil = {}", n)
}
