// Sorting example with fixed array

io :: import "std/io"

main :: fn() {
    io.println("=== Sorting ===")

    arr: [5]i32 = [5, 1, 4, 2, 3]

    for i := 0; i < 5; i += 1 {
        for j := 0; j < 4 - i; j += 1 {
            if arr[j] > arr[j + 1] {
                temp := arr[j]
                arr[j] = arr[j + 1]
                arr[j + 1] = temp
            }
        }
    }

    for i, value in arr {
        io.println("arr[{}] = {}", i, value)
    }
}
