main :: fn() {
    // C-style for loop
    for i := 0; i < 3; i += 1 {
        // Loop body: i takes on values 0, 1, 2
        printf("{}", i)
        print("\n")
    }
    
    // Range-based for loop with array
    arr: [3]i32 = [10, 20, 30]
    for value in arr {
        printf("{}", value)
        print("\n")
    }
    
    // Range with index
    for i, value in arr {
        printf("[{}] = {}\n", i, value)
    }
}