// Structs in A7

io :: import "std/io"

Person :: struct {
    name: string
    age: i32
}

Employee :: struct {
    person: Person
    id: i32
}

main :: fn() {
    person := Person{name: "John", age: 30}
    emp := Employee{person: person, id: 7}

    io.println("=== Structs ===")
    io.println("Person: {} ({})", person.name, person.age)
    io.println("Employee id: {}", emp.id)
    io.println("Employee name: {}", emp.person.name)
}
