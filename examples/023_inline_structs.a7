// Inline-struct themed sample using named structs for runtime stability

io :: import "std/io"

Point :: struct {
    x: i32
    y: i32
}

Rect :: struct {
    w: i32
    h: i32
}

main :: fn() {
    io.println("=== Inline Structs ===")

    point := Point{x: 3, y: 4}
    rect := Rect{w: 7, h: 2}

    io.println("point = ({}, {})", point.x, point.y)
    io.println("area = {}", rect.w * rect.h)
}
