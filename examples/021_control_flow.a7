// Control flow in A7

io :: import "std/io"

main :: fn() {
    io.println("=== Control Flow ===")

    total := 0
    for i := 1; i <= 5; i += 1 {
        if i % 2 == 0 {
            continue
        }
        total += i
    }

    io.println("sum of odd numbers 1..5 = {}", total)

    n := 3
    while n > 0 {
        io.println("countdown: {}", n)
        n -= 1
    }
}
