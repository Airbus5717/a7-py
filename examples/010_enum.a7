// Enums in A7

io :: import "std/io"

Color :: enum {
    Red
    Green
    Blue
}

main :: fn() {
    io.println("=== Enums ===")
    color := Color.Green

    match color {
        case Color.Red: {
            io.println("Color is red")
        }
        case Color.Green: {
            io.println("Color is green")
        }
        case Color.Blue: {
            io.println("Color is blue")
        }
    }
}
