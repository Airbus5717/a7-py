---
import DocsLayout from '../layouts/DocsLayout.astro';
import { withBase } from '../data/site';

const visuals = [
  {
    title: 'Docs Atlas',
    description: 'Global map of routes, maintenance flow, and ownership boundaries.',
    href: withBase('/visuals/a7-docs-atlas.html'),
  },
  {
    title: 'Pipeline Reference',
    description: 'Stage flow with diagnostics branches, zoom controls, and panning.',
    href: withBase('/visuals/a7-pipeline-reference.html'),
  },
  {
    title: 'Examples Reference',
    description: 'Coverage table for all examples and topic grouping.',
    href: withBase('/visuals/a7-examples-reference.html'),
  },
  {
    title: 'Language Map',
    description: 'Language-area topology and quick lookup paths.',
    href: withBase('/visuals/a7-language-map.html'),
  },
];
---

<DocsLayout
  title="Visuals"
  description="Integrated atlas pages for docs structure, compiler flow, examples, and language topology."
>
  <p>Each visual is a standalone HTML reference under <code>site/public/visuals</code>.</p>
  <p>You can open each page full-screen or use embedded previews below.</p>

  <section class="visual-grid">
    {visuals.map((item) => (
      <article class="visual-card">
        <h3>{item.title}</h3>
        <p>{item.description}</p>
        <div class="visual-actions">
          <a class="visual-link" href={item.href}>Open Full Page</a>
          <a class="visual-link" href={item.href} target="_blank" rel="noreferrer">Open In New Tab</a>
        </div>
        <div class="visual-frame">
          <iframe src={item.href} title={`${item.title} preview`} loading="lazy" />
        </div>
      </article>
    ))}
  </section>
</DocsLayout>
